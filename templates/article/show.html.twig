{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="justify-content-center align-items-center text-center bg-light" style="width:600px;margin-left:400px">
    
    <div class="container mt-4">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg  border-0">
                <div class="card-body">
                    <h4 class="text-primary">{{ article.title }}</h4>
                    <p class="text-muted">{{ article.content }}</p>
                </div>
            </div>
        </div>

        <div class="mt-4 p-3  rounded ">
                <th>Commentaires</th>
                       {% for comment in article.comments %}
                        <div class="comment-box p-3 mb-3 bg-white border rounded">
                        <p><strong>{{ comment.author }}</strong> - {{ comment.createdAt|date('d/m/Y H:i') }}</p>
                        <p>{{ comment.content }}</p>
                        </div>
                    {% else %}
                        <p class="text-danger">Aucun commentaire pour le moment.</p>
                    {% endfor %}
        </div>
        </div>

    <h2>commentaire</h2>
        {{ form_start(commentForm) }}
        {{ form_widget(commentForm) }}
        <button class="btn btn-primary">Publier</button>
        {{ form_end(commentForm) }}

       <div class="d-flex justify-content-between">
                <a href="{{ path('app_article_index') }}" >← Retour à la liste</a>
                <div>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-outline-primary me-2">Modifier</a>
                    {{ include('article/_delete_form.html.twig') }}
                </div>
        </div>
</div>
{% endblock %}
